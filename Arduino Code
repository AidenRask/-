#include <Servo.h>

Servo servo180;  // ç”¨ä¾†æ•²æ“Š
Servo servo360;  // ç”¨ä¾†æ¨¡æ“¬ Â±90 åº¦è½‰å‹•

// å¯èª¿åƒæ•¸
const int rotate90Duration = 400;
const int pauseDuration = 1000;
const int betweenTurnsDelay = 1500;

// ä¸­ç«‹å€¼èª¿æ•´ï¼ˆè«‹æ ¹æ“šä½ é¦¬é”å¯¦éš›ç‹€æ³åšå¾®èª¿ï¼‰
//const int neutral = 92;            // åŸæœ¬æ˜¯ 90ï¼Œè«‹æ‰‹å‹•å¾®èª¿
//const int speedOffset = 20;        // æ§åˆ¶æ­£è² æ–¹å‘çš„è·é›¢

void setup() {
  servo180.attach(9);
  servo360.attach(10);

  servo360.write(90);  // å…ˆåœæ­¢
}

void loop() {
  // ğŸ¯ æ•²æ“Šå‹•ä½œï¼ˆä¿®æ”¹å¾Œï¼‰
  servo180.write(0);       // æ•²ä¸‹å»
  delay(700);               // åœç•™ä¸€å°æ®µæ™‚é–“ï¼Œç‡Ÿé€ ã€Œç °ï¼ã€çš„æ„Ÿè¦º
  servo180.write(30);        // å›å½ˆ
  delay(300);               // é–“éš”ï¼ˆå¯èª¿æ•´æ•²æ“Šé »ç‡ï¼‰

  servo360.write(120);    // é †æ™‚é‡æ…¢é€Ÿ
  delay(rotate90Duration);
  servo360.write(90);     // åœæ­¢
  delay(pauseDuration);

  delay(betweenTurnsDelay);

  // ğŸ¯ é€†æ™‚é‡æ—‹è½‰ï¼ˆ360 åº¦ä¼ºæœï¼‰
  servo360.write(60);     // é€†æ™‚é‡æ…¢é€Ÿ
  delay(rotate90Duration);
  servo360.write(90);     // åœæ­¢
  delay(pauseDuration);
}

